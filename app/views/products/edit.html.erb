<h1>Edit a product</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div>Title: <input type="text" name="name" value="<%= @product.name %>">
    </div>
  <div>Price: <input type="text" name="price">
    </div>
  <div>Image: <input type="text" name="image">
    </div>
  <div>Description: <input type="text" name="description">
    </div>
    <input type="submit" value="Update product" class="btn btn-success">
  <% end %>


